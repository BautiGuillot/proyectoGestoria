---
const {
  titulo = "Nuestros Servicios",
  servicios = [
    {
      icono: "🚗",
      nombre: "Trámites de Autos",
      descripcion: "Transferencias, multas, bajas, altas y más. Resoluciones rápidas y efectivas."
    },
    {
      icono: "🏢",
      nombre: "Asesoría Comercial",
      descripcion: "Ayudamos con la constitución de sociedades y permisos comerciales."
    },
    {
      icono: "📄",
      nombre: "Documentación Personal",
      descripcion: "Gestión de partidas de nacimiento, certificados de antecedentes, etc."
    }
  ]
} = Astro.props;
---
<section id="servicios" class="bg-white py-16 px-4">
  <div class="container mx-auto">
    <h2 class="text-3xl md:text-4xl font-bold text-center mb-8">{titulo}</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    {servicios.map((servicio: {icono: string, nombre: string, descripcion: string}) => (
      <div class="bg-gray-50 p-6 rounded-lg shadow-sm hover:shadow-md transition-shadow duration-300 flex flex-col items-center">
        <div class="text-4xl mb-2 text-center">{servicio.icono}</div>
        <h3 class="text-xl font-semibold mb-2 text-center">{servicio.nombre}</h3>
        <p class="text-gray-700 text-center">{servicio.descripcion}</p>
      </div>
    ))}
    </div>
  </div>
</section>
