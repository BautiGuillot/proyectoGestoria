---
// Props opcionales para personalizar el header
const { 
    titulo = "Reduccion de multas y gestoria", 
    descripcion = "Gestoría profesional para trámites vehiculares y personales.", 
    whatsapp = "https://wa.me/tunumerodetelefono?text=Hola%2C%20quisiera%20consultar%20por%20un%20tr%C3%A1mite.", 
    imagenFondo = "/public/radar.webp" 
} = Astro.props;
---
<header class="bg-blue-600 text-white py-32 px-4" style={imagenFondo ? `background-image: url('${imagenFondo}'); background-size: cover; background-position: center; background-color: #2563eb;` : undefined}>
  <div class="container mx-auto text-center">
    <h1 class="text-4xl md:text-6xl font-bold mb-4">{titulo}</h1>
    <p class="text-xl md:text-2xl mb-8">{descripcion}</p>
    <a href={whatsapp}
       class="bg-green-500 hover:bg-green-700 text-white font-bold py-3 px-6 rounded-full text-lg shadow-lg transition-all duration-300">
      Contactar por WhatsApp
    </a>
  </div>
</header>
