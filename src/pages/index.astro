---
// Importa cualquier componente o script que necesites aquí.
import '../styles/global.css'
import Navbar from '../components/Navbar.astro'
import AboutSectionV2 from '../components/AboutSectionV2.astro';
import FooterV2 from '../components/FooterV2.astro';
import HeroSection from '../components/HeroSection.astro';
import HowItWorksSection from '../components/HowItWorksSection.astro';
import ContactFormV2 from '../components/ContactFormV2.astro';
---
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Gestoría Online - Tu Solución en Trámites</title>
  <link rel="stylesheet" href="/style.css">
  <style>
    /* Puedes agregar estilos personalizados aquí si es necesario */
  </style>
</head>
<body class="bg-gray-100 text-gray-800 font-sans">

  <Navbar server:defer />

  <section id="HeroSection">
    <HeroSection />
  </section>

  <section id="AboutSectionV2">
    <AboutSectionV2 />
  </section>

  <section id="HowItWorksSection">
    <HowItWorksSection />
  </section>

  <section id="ContactFormV2">
    <ContactFormV2 />
  </section>

  <FooterV2 />

  <script>
    import { initAnimations } from "../scripts/observer.js";
    document.addEventListener("DOMContentLoaded", () => {
      initAnimations();
    });
  </script>

</body>
</html>